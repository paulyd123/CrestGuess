<Page
    x:Class="UWPCrestGuess.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPCrestGuess"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#242e38">
        <Grid VerticalAlignment="Top">
            <Image
                Width="200" Height="200"
                Stretch="Uniform"
                Source="ms-appx:///Assets/Flags/Barcelona.jpg"/>
        </Grid>

        <Grid x:ConnectionId='1' x:Name="Menu" VerticalAlignment="Center"
              Background="White"
              CornerRadius="8"
              Margin="8"
              Padding="16 50">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Button x:ConnectionId='2' x:Name="btnPlay"
                    Grid.Row="0"
                    Content="PLAY"
                    Margin="8"
                    Background="#1cb3bc"
                    Foreground="White"
                    HorizontalAlignment="Stretch"/>
            <Button x:ConnectionId='3' x:Name="btnScore"
                    Grid.Row="1"
                    Content="SCORE RANKING"
                    Margin="8"
                    Background="#ff8a80"
                    Foreground="White"
                    HorizontalAlignment="Stretch"/>
            <Grid Grid.Row="2" Margin="8 0 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton x:ConnectionId='4'
                    GroupName="Mode"
                    Grid.Column="0"
                    x:Name="rdiEasy"
                    Content="Easy"
                    IsChecked="True"
                    />
                <RadioButton x:ConnectionId='5'
                      GroupName="Mode"
                    Grid.Column="1"
                    x:Name="rdiMedium"
                    Content="Medium"/>
            </Grid>
        </Grid>

    </Grid>
</Page>

